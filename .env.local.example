# Supabase project URL (Dashboard -> Project Settings -> API)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co

# Supabase public anon key (safe for browser usage)
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Comma-separated list of emails allowed to access /admin
# Example: ADMIN_EMAILS=you@example.com,coadmin@example.com
ADMIN_EMAILS=you@example.com

# Optional: override email confirmation redirect URL used in sign-up
# If omitted, app falls back to: http://localhost:3000/auth/callback?next=/admin
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000/auth/callback?next=/admin
